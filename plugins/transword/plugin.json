{
  "name": "识别词生成器",
  "id": "transword",
  "version": "0.1",
  "description": "根据手动整理时填写的电视剧参数生成自定义识别词，支持集数偏移、替换词等功能。",
  "author": "jxxghp",
  "author_url": "https://github.com/NasPilot",
  "icon": "words.png",
  "category": "工具",
  "tags": ["识别词", "电视剧", "整理", "工具"],
  "min_app_version": "2.0.0",
  "dependencies": [],
  "config": {
    "enabled": {
      "type": "boolean",
      "default": false,
      "description": "是否启用插件"
    },
    "auto_generate": {
      "type": "boolean",
      "default": false,
      "description": "是否自动生成识别词"
    },
    "custom_words": {
      "type": "string",
      "default": "",
      "description": "自定义识别词列表"
    }
  },
  "api": [
    {
      "path": "/generate_word",
      "method": "POST",
      "description": "生成识别词"
    }
  ],
  "commands": [
    {
      "cmd": "/transword",
      "description": "生成识别词"
    }
  ]
}